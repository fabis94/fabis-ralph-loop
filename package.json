{
  "name": "fabis-ralph-loop",
  "version": "1.0.1",
  "description": "CLI for setting up and running Claude Ralph autonomous coding loops in Docker containers",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fabis94/fabis-ralph-loop.git"
  },
  "type": "module",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    }
  },
  "bin": {
    "fabis-ralph-loop": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsx src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "tsc:check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "unused:check": "knip",
    "check": "eslint . && tsc --noEmit && knip",
    "prepare": "husky",
    "frl": "pnpm dev"
  },
  "dependencies": {
    "c12": "^3.0.4",
    "citty": "^0.2.1",
    "consola": "^3.4.2",
    "ejs": "^4.0.1",
    "execa": "^9.5.2",
    "universal-ai-config": "^1.7.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/ejs": "^3.1.5",
    "@types/node": "^25.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "knip": "^5.44.2",
    "lint-staged": "^16.2.7",
    "prettier": "^3.5.2",
    "tsdown": "^0.20.3",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,mts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.29.3+sha512.498e1fb4cca5aa06c1dcf2611e6fafc50972ffe7189998c409e90de74566444298ffe43e6cd2acdc775ba1aa7cc5e092a8b7054c811ba8c5770f84693d33d2dc"
}
