{
  "name": "fabis-ralph-loop",
  "version": "0.1.0",
  "description": "CLI for setting up and running Claude Ralph autonomous coding loops in Docker containers",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    }
  },
  "bin": {
    "fabis-ralph-loop": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "eslint . && prettier --check . && tsc --noEmit && knip",
    "prepare": "husky"
  },
  "dependencies": {
    "c12": "^3.0.4",
    "citty": "^0.1.6",
    "consola": "^3.4.2",
    "ejs": "^3.1.10",
    "execa": "^9.5.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/ejs": "^3.1.5",
    "@types/node": "^22.13.4",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "knip": "^5.44.2",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.2",
    "tsdown": "^0.12.4",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^3.0.5"
  },
  "lint-staged": {
    "*.{ts,mts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "license": "MIT"
}
